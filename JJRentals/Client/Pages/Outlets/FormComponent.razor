<EditForm Model="@outlet" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@outlet.Name" class="form-control" />
                <ValidationMessage For="@(() => outlet.Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Location: </label>
            <div>
                <InputText @bind-Value="@outlet.Location" class="form-control" />
                <ValidationMessage For="@(() => outlet.Location)" />
            </div>
        </div>

        <div class="form-group">
            <label>ContactNo: </label>
            <div>
                <InputText @bind-Value="@outlet.ContactNo" class="form-control" />
                <ValidationMessage For="@(() => outlet.ContactNo)" />
            </div>
        </div>

        <div class="form-group">
            <label>Email: </label>
            <div>
                <InputText @bind-Value="@outlet.Email" class="form-control" />
                <ValidationMessage For="@(() => outlet.Email)" />
            </div>
        </div>

       

        <br />
        <br />
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="outlets" />

</EditForm>


@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Outlet outlet { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}